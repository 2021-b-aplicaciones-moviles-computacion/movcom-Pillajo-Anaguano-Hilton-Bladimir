<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cproducto">

    <Button
        android:id="@+id/btn_crear_producto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CREAR PRODUCTO"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="394dp" />

    <TextView
        android:id="@+id/et_nombre_producto"
        android:layout_width="166dp"
        android:layout_height="22dp"
        android:layout_marginBottom="40dp"
        android:text="Nombre del Producto"
        app:layout_constraintBottom_toTopOf="@+id/et_precio_producto"
        app:layout_constraintEnd_toEndOf="@+id/et_precio_producto"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_precio_producto" />

    <TextView
        android:id="@+id/et_precio_producto"
        android:layout_width="167dp"
        android:layout_height="24dp"
        android:layout_marginBottom="40dp"
        android:text="Ingrese Precio"
        app:layout_constraintBottom_toTopOf="@+id/btn_crear_producto"
        app:layout_constraintEnd_toEndOf="@+id/btn_crear_producto"
        app:layout_constraintStart_toStartOf="@+id/btn_crear_producto" />
</androidx.constraintlayout.widget.ConstraintLayout>